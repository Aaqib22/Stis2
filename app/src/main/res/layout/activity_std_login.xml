<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context="com.example.bluecodic.stis.Std_login">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="S T U D E N T  LOGIN"
        android:textColor="#48B7EA"
        android:textSize="20dp"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_marginTop="0dp"
        android:text="Hello there, Welcome Back"
        android:textAlignment="textStart"
        android:textSize="40dp"
        android:layout_marginLeft="50dp"
        android:textColor="#48B7EA"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <EditText
        android:id="@+id/std_login"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:hint="  User Name"
        android:textColor="#48B7EA"
        android:drawableLeft="@drawable/login_techr"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        />

    <EditText
        android:id="@+id/std_login_pass"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textColor="#48B7EA"
        android:textSize="20dp"
        android:hint="  Password"
        android:drawableLeft="@drawable/lockk"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/std_login"
        android:layout_alignStart="@+id/std_login" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="#48B7EA"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:text="L O G I N"
        android:layout_below="@+id/std_login_pass"
        android:layout_alignStart="@+id/std_login_pass"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/std_not_acnt"


        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="DONT HAVE AN ACCOUNT?"
        android:textAlignment="textEnd"
        android:textColor="#48B7EA"
        android:textSize="13dp"
        android:layout_below="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/std_sup"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/std_not_acnt"
        android:layout_toEndOf="@+id/std_not_acnt"
        android:text="SIGNUP"
        android:textColor="#2d07ea"
        android:textSize="15dp" />


</RelativeLayout>
