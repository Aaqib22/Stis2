<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:padding="5dp"
    android:id="@+id/home_item_id">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nabeel"
                android:id="@+id/img_home"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/name_home"


                    />

            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="your text will be there"
                android:gravity="center"
                android:id="@+id/status_home"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="200dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <Button
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="comment"
                android:textSize="10dp"
                android:drawableLeft="@drawable/ic_action_comment"
                android:textAlignment="textStart"
                android:background="@android:color/transparent"
                android:drawablePadding="20dp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/comment_btn_home"

                />

            <Button
                android:drawableLeft="@drawable/ic_action_like"
                android:text="like"
                android:textSize="10dp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textAlignment="textStart"
                android:background="@android:color/transparent"
                android:drawablePadding="20dp"
                android:padding="10dp"
                android:id="@+id/like_btn_home"


                />

            <TextView
                android:id="@+id/like_home"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="end">

            <TextView
                android:id="@+id/option_digit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:text="&#8942;"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>